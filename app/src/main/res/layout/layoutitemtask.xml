<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivTask"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvTenbaitap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:padding="10dp"/>

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/tvThoigiantap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time" />

        <TextView
            android:padding="10dp"
            android:id="@+id/tvKcaltap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kcal" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnYeuthich"
            android:backgroundTint="#D7DCA4EC"
            android:textColor="@color/black"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textSize="12dp"
            android:text="Yêu thích"/>

        <Button
            android:id="@+id/btnTap"
            android:backgroundTint="#D77EF85B"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textSize="12dp"
            android:text="Tập"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>