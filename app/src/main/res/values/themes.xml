<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DatePickerTheme_luan" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/purple_200</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyleDark</item>
        <item name="android:windowBackground">@color/cardview_dark_background</item>
        <item name="android:headerBackground">@color/purple_200</item>
    </style>

    <style name="MyDatePickerStyleDark" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/purple_200</item>
    </style>


</resources>